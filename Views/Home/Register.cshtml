@model PROG6212_POE.Models.Register

<title>Register - Monthly Claim System</title>
<link rel="stylesheet" href="/css/register.css" />


<div class="wel">
    <h1>Welcome</h1>
    <p>Fill in the required information to Register</p>
</div>

<form asp-action="Register" method="post" class="form-container">

    <div class="form-group">
        <label>Name:</label>
        <input type="text" asp-for="name" placeholder="Enter Name"/>
        <span asp-validation-for="name"/>
    </div>

    <div class="form-group">
        <label>Surname:</label>
        <input type="text" asp-for="surname" placeholder="Enter Surname"/>
        <span asp-validation-for="surname" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="email" placeholder="Enter Email"/>
        <span asp-validation-for="email" />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="password" placeholder="Enter Password"/>
        <span asp-validation-for="password" />
    </div>

    <div class="form-group">
        <label>Role:</label>
        <select asp-for="role">
            <option value="Lecturer">Lecturer</option>
            <option value="ProgramManager">Program Manager</option>
            <option value="ProgramCoordinator">Program Coordinator</option>
        </select>
        <span asp-validation-for="role"/>
    </div>

    <button type="submit" class="btn">Register</button>

    @if(ViewBag.ErrorMessage != null)
    {  
           <p style="color:red;"> @ViewBag.ErrorMessage</p>
    }

    @if (ViewBag.SuccessMessage != null)
    {
        <p style="color:green;">@ViewBag.SuccessMessage</p>
    }
</form>

        <div class="login-prompt">
            <p>
                Already have an account? <a href=@Url.Action("Login","Home")>Login here</a>
            </p>
        </div>