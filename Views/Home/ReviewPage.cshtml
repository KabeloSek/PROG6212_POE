@model List<PROG6212_POE.Models.Claims_Queries>

<title>ReviewPage - Monthly Claim System</title>

<link rel="stylesheet" href="/css/reviewPage.css" />

@if (Model == null)
{
    <p>Model is null</p>
}
else if (!Model.Any())
{
    <p>No claims found</p>
}
else
{
    <table class="claims-table">
        <thead>
            <tr>
                <th>ClaimID</th>
                <th>Name</th>
                <th>Sessions</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Document</th>
                <th>Claim Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.claimID</td>
                    <td>@claim.name</td>
                    <td>@claim.sessions</td>
                    <td>@claim.hoursWorked</td>
                    <td>@claim.hourlyRate</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.document))
                        {
                            <a href="@Url.Content("~/uploads/" + claim.document)" target="_blank">View Document</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                    <td>
                        <select>
                            <option value="approve">Approve</option>
                            <option value="reject">Reject</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}