@model PROG6212_POE.Models.LecturerDTO

<link rel="stylesheet" href="/css/login.css" />

<div class="wel">
    <h2>Edit Lecturer</h2>
</div>

<div class="form-container">
    <form asp-action="EditLecturer" method="post">

        <input type="hidden" asp-for="LecturerID" />

        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" />
        </div>

        <div class="form-group">
            <label>Surname</label>
            <input asp-for="Surname" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" />
        </div>

        <div class="form-group" style="text-align:center; margin-top:20px;">
            <button type="submit" class="btn">Save</button>
            <a asp-action="HRPage" class="btn" style="margin-left:10px;">Cancel</a>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color:red; text-align:center">@ViewBag.ErrorMessage</p>
        }

    </form>
</div>